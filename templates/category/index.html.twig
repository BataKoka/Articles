{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="form-group row">
        <div class="col-sm-7">
            <h1 class="h3 mb-3 font-weight-normal">Category index</h1>
        </div>
        <div class="col-sm-1">
            <a href="{{ path('category_new') }}" class="btn btn-success">Create new</a>
        </div>
    </div>

    <table id="category_table" class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th>Title</th>
                <th class="text-center">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.title }}</td>
                <td class="text-center">
                    <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                        <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-primary">Edit</a>
                        {{ include('category/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}